{
  "name": "amsf001-project-tracker",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:db": "supabase test db",
    "test:all": "npm run test:run && npm run e2e",
    
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:smoke": "playwright test --grep='@smoke|@critical' --project=admin",
    
    "e2e:verify": "node scripts/e2e/verify-test-environment.js",
    "e2e:prerequisites": "node scripts/e2e/verify-e2e-prerequisites.js",
    "e2e:setup": "node scripts/e2e/setup-test-environment.js",
    "e2e:seed": "node scripts/e2e/seed-test-data.js",
    "e2e:cleanup": "node scripts/e2e/cleanup-test-data.js",
    "e2e:reset": "npm run e2e:cleanup -- --yes && npm run e2e:seed",
    
    "e2e:admin": "playwright test --project=admin",
    "e2e:supplier-pm": "playwright test --project=supplier-pm",
    "e2e:supplier-finance": "playwright test --project=supplier-finance",
    "e2e:customer-pm": "playwright test --project=customer-pm",
    "e2e:customer-finance": "playwright test --project=customer-finance",
    "e2e:contributor": "playwright test --project=contributor",
    "e2e:viewer": "playwright test --project=viewer",
    
    "e2e:staging": "PLAYWRIGHT_BASE_URL=https://amsf001-project-tracker-staging.vercel.app playwright test",
    "e2e:production": "PLAYWRIGHT_BASE_URL=https://amsf001-project-tracker.vercel.app playwright test",
    
    "e2e:pages": "playwright test e2e/pages/",
    "e2e:workflows": "playwright test e2e/workflows/",
    "e2e:report": "playwright show-report",
    
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "date-fns": "^3.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.5.2",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "jsdom": "^25.0.1",
    "msw": "^2.12.4",
    "vite": "^5.4.21",
    "vitest": "^2.1.9"
  }
}
